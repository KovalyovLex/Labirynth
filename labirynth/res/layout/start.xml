<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flexy3big"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="8dip" >

    <Button
        android:id="@+id/ExitButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="65dp"
        android:background="@drawable/button3" />

    <Button
        android:id="@+id/SettingsButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/ExitButton"
        android:layout_alignBottom="@+id/ExitButton"
        android:layout_alignLeft="@+id/ExitButton"
        android:background="@drawable/button2" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_above="@+id/SettingsButton"
        android:layout_alignLeft="@+id/SettingsButton"
        android:background="@drawable/button1" />

</RelativeLayout>